#:kivy 1.11.1

<AdminMainScreen>:
    # objectProperty names
    inventoryButton: inventory
    powerButton: power

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        spacing: 25
        size: 350, 300

        Button:
            id: inventory
            text: 'Edit Inventory'
            pos_hint:{'left': 1}
            background_normal: ''
            background_color: [1, 0.595, 0, 1]
            background_down: 'Color\DarkerOrange.png'

        Button:
            id: power
            text: 'Power Off'
            pos_hint:{'left': 1}
            background_normal: ''
            background_color: [1, 0.595, 0, 1]
            background_down: 'Color\DarkerOrange.png'

<InventoryScreen>
    backButton: back
    grid: gridLayout
    editIngredientButton: editIngredient

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 38
            orientation: 'horizontal'

            canvas:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                id: back
                text: 'Back'
                size_hint_x: None
                width: 80
                size_hint_y: None
                height: 36

            BoxLayout:
                orientation: 'vertical'

                Button:
                    id: editIngredient
                    text: 'Edit Ingredients'
                    size_hint_x: None
                    width: 120
                    size_hint_y: None
                    height: 36
                    pos_hint: {'right': 1}

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size: self.size

            GridLayout:
                size_hint_y: None
                size_hint_x: 1
                padding: [15]
                id: gridLayout
                cols: 3
                row_force_default: True
                row_default_height: 150
                valign: 'middle'
                spacing: [15, 15]

<InventoryItemTemplate>:
    cylinderButton: cylinder
    ingredientSpinner: ingredient
    percentLabel: percentage
    progressBar: progress
    resetButton: reset
    orientation: 'vertical'

    Button:
        id: cylinder
        text: 'Cylinder Name'
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        background_color: [0, 0, 0, 0]

    Spinner:
        id: ingredient
        text: 'Default Ingredient'
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        background_color: [0, 0, 0, 0]

    Label:
        id: percentage
        text: "Percentage"
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        background_color: [0, 0, 0, 0]

    ProgressBar:
        id: progress
        value: 50


    Button:
        id: reset
        text: 'Reset'

<InventoryPopupButtonLayout>:
    ingredientButton: ingredient
    deleteButton: delete

    BoxLayout:
        size_hint_y: None
        spacing: 5
        Button:
            id: ingredient
            size_hint_y: None
            height: 40

            text: 'Ingredient'
        Button:
            id: delete
            size_hint_y: None
            size_hint_x: None
            size: (40, 40)
            text: 'X'
