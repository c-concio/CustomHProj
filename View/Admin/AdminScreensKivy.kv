#:kivy 1.11.1

<AdminMainScreen>:
    # objectProperty names
    inventoryButton: inventory
    powerButton: power
    returnMainScreen: returnMainScreen

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        spacing: 25
        size: 350, 300

        Button:
            id: inventory
            text: 'Edit Inventory'
            pos_hint:{'left': 1}
            background_normal: ''
            background_color: [1, 0.595, 0, 1]
            background_down: 'Color\DarkerOrange.png'

        Button:
            id: returnMainScreen
            text: 'Return to Main Screen'
            pos_hint:{'left': 1}
            background_normal: ''
            background_color: [1, 0.595, 0, 1]
            background_down: 'Color\DarkerOrange.png'

        Button:
            id: power
            text: 'Power Off'
            pos_hint:{'left': 1}
            background_normal: ''
            background_color: [1, 0.595, 0, 1]
            background_down: 'Color\DarkerOrange.png'

<InventoryScreen>
    backButton: back
    grid: gridLayout
    editIngredientButton: editIngredient
    sortToggleButton: sort

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            size_hint_y: None
            height: 38
            canvas:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size_hint_y: None
                height: 38
                orientation: 'horizontal'
                size_hint_max_x: 1325



                Button:
                    id: back
                    text: 'Back'
                    size_hint_x: None
                    width: 80
                    size_hint_y: None
                    height: 36

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: None
                        width: self.minimum_width
                        pos_hint: {'right': 1}

                        ToggleButton:
                            id: sort
                            text: 'Sort'
                            size_hint_x: None
                            width: 45
                            size_hint_y: None
                            height: 36

                        Button:
                            id: editIngredient
                            text: 'Edit Ingredients'
                            size_hint_x: None
                            width: 120
                            size_hint_y: None
                            height: 36

        AnchorLayout:

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: self.size
                size_hint_max_x: 1350

                GridLayout:
                    size_hint_y: None
                    size_hint_x: 1
                    padding: [15]
                    id: gridLayout
                    cols: 3
                    row_force_default: True
                    row_default_height: 150
                    valign: 'middle'
                    spacing: [25, 40]

<InventoryItemTemplate>:
    cylinderButton: cylinder
    ingredientSpinner: ingredient
    percentLabel: percentage
    progressBar: progress
    resetButton: reset

    orientation: 'vertical'
    padding: 5

    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height


    Button:
        id: cylinder
        text: 'Cylinder Name'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        background_color: [0, 0, 0, 0]
        bold: True

    Spinner:
        id: ingredient
        text: 'Default Ingredient'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        background_normal: ''
        background_color: [0.28, 0.28, 0.28, 1]

    Label:
        id: percentage
        text: "Percentage"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        background_color: [0, 0, 0, 0]

    ProgressBar:
        id: progress
        value: 50


    Button:
        id: reset
        text: 'Move Motor'
        background_normal: ''
        background_color: [0.135, 0.135, 0.135, 1]

<InventoryPopupButtonLayout>:
    ingredientButton: ingredient
    deleteButton: delete

    BoxLayout:
        size_hint_y: None
        spacing: 5
        Button:
            id: ingredient
            size_hint_y: None
            height: 40

            text: 'Ingredient'
        Button:
            id: delete
            size_hint_y: None
            size_hint_x: None
            size: (40, 40)
            text: 'X'

<AddInventoryPopupLayout>:
    confirmButton: confirmButton
    declineButton: declineButton

    BoxLayout:
        orientation: 'horizontal'

        Button:
            id: confirmButton
            text: "Yes"

        Button:
            id: declineButton
            text: "No"

<ResetMotorPopupLayout>:
    upButton: upButton
    pauseButton: pauseButton
    downButton: downButton
    doneButton: doneButton

    orientation: 'tb-lr'

    Button:
        id: upButton
        text: "Move Motor Up"
        size_hint: (0.5, 1/3)

    Button:
        id: pauseButton
        text: "Pause Motor"
        size_hint: (0.5, 1/3)

    Button:
        id: downButton
        text: "Move Motor Down"
        size_hint: (0.5, 1/3)

    Button:
        id: doneButton
        text: "Done"
        size_hint: (0.5, 1)