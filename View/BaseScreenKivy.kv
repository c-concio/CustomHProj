<BaseScreen>:
    grid: base_grid

    canvas.before:
        Color:
            rgba: 0.19, 0.19, 0.19, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'center'

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: ((2/3)*self.width, 0) if self.width*0.88 > self.height else ((1/4)*self.width, 0)
                size: ((1/3)*self.width, ((1/3)*self.width)*1.1875) if self.width*0.88 > self.height else ((4/5)*self.width, ((4/5)*self.width)*1.1875)
                #size: (600, 712.5)
                source: "Images/chiliBowl.png"


    AnchorLayout:
        anchor_x: 'center'

        GridLayout:
            id: base_grid
            size_hint_x: 0.6
            size_hint_y: 0.2
            cols: 2


<BaseItemTemplate>
    baseToggleButton: base

    ToggleButton:
        id: base
        text: 'Base Name'
        text_size: self.size

