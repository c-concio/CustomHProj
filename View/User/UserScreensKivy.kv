<AmountScreen>:
    doneButton: done
    resetButton: reset
    addButtons: addB
    removeButton: remove
    baseAdjustSlider: slider
    flavor_layout: flavor_layout

    FloatLayout:
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'center'

            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: ((2/3)*self.width, 0) if self.width*0.88 > self.height else ((1/4)*self.width, 0)
                    size: ((1/3)*self.width, ((1/3)*self.width)*1.1875) if self.width*0.88 > self.height else ((4/5)*self.width, ((4/5)*self.width)*1.1875)
                    #size: (600, 712.5)
                    source: "View/chiliBowl.png"

    BoxLayout:
        orientation: 'vertical'

        #Top message
        Label:
            text:"Drag to Adjust Amount"
            font_name: "Pacifico"
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.35,"top":0.9}
            size_hint: 0.35, 0.15

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                id: flavor_layout
                orientation: 'vertical'
                size_hint_y: None

                BoxLayout:
                    orientation: 'horizontal'

                    #Base list
                    Label:
                        text:"Base 1"
                        font_name: "Pacifico"
                        font_size: (root.width**2 + root.height**2) / 17**4
                        pos_hint: {'x':-0.11,'y':0.5}
                        size_hint: 0.35, 0.35

                    Slider:
                        id: slider
                        min: 0.
                        max: 360.
                        value: 180.
                        step: 30
                        size_hint_x: 0.6
                        pos_hint: {'x': 0.05, 'top': 1.1}

                    Label:
                        text:"Base 2"
                        font_name: "Pacifico"
                        font_size: (root.width**2 + root.height**2) / 17**4
                        pos_hint: {'x':0.15,'y':0.5}
                        size_hint: 0.35, 0.35

                    RoundedButton2:
                        id: reset
                        text: 'Reset'
                        on_press: reset.value = 180
                        pos_hint:{'x':0.4,'y':0.57}
                        size_hint: 0.1, 0.3
                        on_press: slider.value = 180
                        font_name: "OstrichSans"
                        font_size: (root.width**2 + root.height**2) / 17**4
                        bold: True
                        color: 0, 0, 0, 1


                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.4, 1

                    #Flavor list
                    Label:
                        text:"Flavor 1"
                        font_name: "Pacifico"
                        font_size: (root.width**2 + root.height**2) / 17**4
                        size_hint: 0.35, 0.35

                    CircleButton:
                        id: remove
                        text: "-"
                        font_size: (root.width**2 + root.height**2) / 14**4
                        size_hint: 0.06, 0.09

                    Label:
                        text: root.label_text
                        font_size: (root.width**2 + root.height**2) / 15**4
                        size_hint: 0.3, 0.1

                    CircleButton:
                        id: addB
                        text: '+'
                        font_size: (root.width**2 + root.height**2) / 14**4
                        size_hint: 0.06, 0.09




            #Ellipse
            Widget:
                id: w_canvas
                canvas:
                    Color:
                        rgb: 1, 1, 1

                    Ellipse:
                        pos: [self.center_x, self.center_y]
                        size: 100, 100
                        source: 'View/c2.png'
                        angle_start: slider.value

                    Ellipse:
                        pos: [self.center_x, self.center_y]
                        size: 100, 100
                        source: 'View/c1.png'
                        angle_end: slider.value


        RoundedButton:
            id: done
            pos_hint:{"x":0.65,"y":0.05}
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            font_name: "OstrichSans"
            bold: True
            color: 0, 0, 0, 1
            text: "Done"





<RoundedButton2@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            rgba: (128,128,128,0.6) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [50,50]

