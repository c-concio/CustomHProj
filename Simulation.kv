<SimulationScreen>:
    box: box
    baseRow: baseRow
    flavorRow: flavorRow

    canvas:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: box
        orientation: 'vertical'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_y: 0.6

            GridLayout:
                id: baseRow
                numberOfChildren: 6


                cols: self.numberOfChildren
                size_hint_x: None
                width: (self.numberOfChildren * 100)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            GridLayout:
                id: flavorRow
                numberOfChildren: 22
                cols: 11
                size_hint_x: None
                width: (self.cols * 125)



<SimulationCylinderTemplate>:
    bar: bar
    name: name
    ingredient: ingredient
    steps: steps

    cols: 1
    size_hint_x: None
    width: 125


    canvas.before:
        Color:
            rgb: 0.3, 0.3, 0.3
        Rectangle:
            size: self.size
            pos: self.pos

    Widget:
        id: bar
        amount: 1

        canvas.before:
            Color:
                rgb: 0.15, 0.15, 0.15
            Rectangle:
                size: self.width - 20, self.height - 20
                pos: self.x + 10, self.y + 10

        canvas:
            Color:
                rgb: 1, 0.56, 0.1
            Rectangle:
                size: self.width - 20, (self.height-20)*self.amount
                pos: self.x + 10, self.y + 10
    Label:
        id: steps
        text: "1"
        size_hint_y: None
        height: 20

    Label:
        id: name
        text: "Cayenne"
        size_hint_y: None
        height: 20

    Label:
        id: ingredient
        text: "Here"
        size_hint_y: None
        height: 20