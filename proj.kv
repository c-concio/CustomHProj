<AmountScreen>:
    name: "amount"

    FloatLayout:

        Label:
            text:"Drag to Adjust Amount"
            font_name: "Pacifico"
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.35,"top":0.9}
            size_hint: 0.35, 0.15


        RoundedButton:
            pos_hint:{"x":0.65,"y":0.05}
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            font_name: "OstrichSans"
            bold: True
            color: 0, 0, 0, 1
            text: "Done"
            on_release:
                root.manager.transition.direction = "left"
                root.startBtn()

        Slider:
            id: adj1
            min: 0.
            max: 360.
            value: 180.
            step: 10
            size_hint_x: 0.3
            pos_hint: {'x': 0.05, 'y': 0.05}



        FloatLayout:
            canvas:
                Color:
                    rgb: 1, 1, 1
                Ellipse:
                    size: self.width - 2000 , self.height - 800
                    source: 'c1.png'
                    angle_start: adj1.value
                    pos: 1300,400

                Ellipse:
                    size: self.width - 2000, self.height - 800
                    source: 'c2.png'
                    angle_end: adj1.value
                    pos: 1300,400

            RoundedButton2:
                text: 'Reset'
                on_press: adj1.value = 180
                pos_hint:{"x":0.15,"y":0.05}
                size_hint: 0.1, 0.1
                font_name: "OstrichSans"
                font_size: (root.width**2 + root.height**2) / 16**4
                bold: True
                color: 0, 0, 0, 1

            RoundedButton:
                pos_hint:{"x":0.65,"y":0.05}
                size_hint: 0.3, 0.2
                font_size: (root.width**2 + root.height**2) / 13**4
                font_name: "OstrichSans"
                bold: True
                color: 0, 0, 0, 1
                text: "Done"
                on_release:
                    root.manager.transition.direction = "left"
                    root.startBtn()

            Label:
                text:"Base"
                font_name: "Pacifico"
                font_size: (root.width**2 + root.height**2) / 17**4
                pos_hint: {"x":0.035,"top":0.8}
                size_hint: 0.35, 0.35


            Label:
                text:"Flavour"
                font_name: "Pacifico"
                font_size: (root.width**2 + root.height**2) / 17**4
                pos_hint: {"x":0.035,"top":0.65}
                size_hint: 0.35, 0.35

            Label:
                id: amountF
                text: "0"

            CircleButton:
                id: addF
                text: "+"
                font_size: (root.width**2 + root.height**2) / 14**4
                pos_hint: {"x":0.1,"y":0.35}
                size_hint: 0.06, 0.09



            CircleButton:
                id: removeF
                text: "-"
                font_size: (root.width**2 + root.height**2) / 14**4
                pos_hint: {"x":0.25,"y":0.35}
                size_hint: 0.06, 0.09







